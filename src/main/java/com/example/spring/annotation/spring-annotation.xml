<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>

    <bean id="simpleMovieLister" class="com.example.spring.annotation.SimpleMovieLister"/>
    <bean id="movieFinder" class="com.example.spring.annotation.MovieFinder"/>

    <bean class="com.example.spring.annotation.MovieCatalog">
        <property name="catalog" value="first catalog"/>
    </bean>

    <bean class="com.example.spring.annotation.MovieCatalog">
        <property name="catalog" value="second catalog"/>
    </bean>
     <bean class="com.example.spring.annotation.MovieCatalog">
        <property name="catalog" value="second catalog"/>
    </bean>
    <bean id="movieRecommender" class="com.example.spring.annotation.MovieRecommender"/>
</beans>